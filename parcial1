<script>
    function strarr2num(arreglo, lim)
     {
    var arrs = arreglo.split(lim);
    arrn = [];
    arrs.forEach((elem) => {
        arrn.push(Number(elem));
    });
    return arrn;
}
function byId(id) {
    return document.getElementById(id).value;
}

    function Translacion1(){
   let p1n =strarr2num(byId("p1"),",");
   let p2n =strarr2num(byId("p2"),","); 

  alert(p1n[0]+p1n[1]+p1n[2]);
  alert(p2n[0]+p2n[1]+p2n[2]);



    }
      

  </script>
